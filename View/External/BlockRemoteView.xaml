<UserControl DataContext="{StaticResource RemoteViewModel}"
             x:Class="View.External.BlockRemoteView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:View.External"
             mc:Ignorable="d">
    <StackPanel Style="{StaticResource SPMargin}">
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Style="{StaticResource BH3}"
                    Command="{Binding PropAnyDeskViewModel.CMDConnect}"
                    Visibility="{Binding PropAnyDeskViewModel.PropButtonVisibility}">
                <Button.Content>
                    <TextBlock Text="AnyDesk"
                               Margin="4,0,4,0"
                               Foreground="#ff0000"
                               FontWeight="Bold"/>
                </Button.Content>
            </Button>
            <Button Style="{StaticResource BH3}"
                    Command="{Binding PropTeamViewerViewModel.CMDConnect}"
                    Visibility="{Binding PropTeamViewerViewModel.PropButtonVisibility}">
                <Button.Content>
                    <TextBlock Text="TeamViewer"
                               Margin="4,0,4,0"
                               Foreground="#4a89c2"
                               FontWeight="Bold" />
                </Button.Content>
            </Button>
            <Button Style="{StaticResource BH3}">
                <Button.Content>
                    <TextBlock Text="RDP"
                               Margin="4,0,4,0"
                               Foreground="#5f9597"
                               FontWeight="Bold" />
                </Button.Content>
            </Button>
        </StackPanel>
    </StackPanel>
</UserControl>
