<Window DataContext="{StaticResource CompanyViewModel}"
        x:Class="View.External.CompanyWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View.External"
        mc:Ignorable="d"
        Title="{Binding PropertyCompany.PropName}"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Width="400">
    <StackPanel>
        <StackPanel Style="{StaticResource SPMarginBlock}">
            <StackPanel Style="{StaticResource SPMargin}">
                <TextBox Text="{Binding PropertyCompany.PropName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource TBH1}" />
                <TextBox Text="{Binding PropertyCompany.PropDescription, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource TBA}"
                         TextWrapping="Wrap" />
            </StackPanel>
        </StackPanel>

        <StackPanel Style="{StaticResource SPMarginBlock}">
            <StackPanel HorizontalAlignment="Left"
                        Style="{StaticResource SPMarginHeader}">
                <TextBlock Text="{Binding Source={StaticResource MainViewModel}, Path=Consts.HDomain}"
                           Style="{StaticResource TH4}"
                           Foreground="{StaticResource MainBackground}"
                           Background="{StaticResource HRemote}" />
            </StackPanel>
            <StackPanel Style="{StaticResource SPMargin}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding Source={StaticResource MainViewModel}, Path=Consts.CompanyDomainName}"
                               Style="{StaticResource TA}" />
                    <TextBox Text="{Binding PropertyCompany.PropDomainName}"
                             Style="{StaticResource TBA}" />
                </StackPanel>
            </StackPanel>

        </StackPanel>
    </StackPanel>
</Window>
