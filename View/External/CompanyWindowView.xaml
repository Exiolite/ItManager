<Window DataContext="{StaticResource CompanyViewModel}"
        x:Class="View.External.CompanyWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View.External"
        mc:Ignorable="d"
        Title="{Binding PropertyCompany.PropertyName}"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Width="400">
    <StackPanel>
        <StackPanel Margin="4">
            <StackPanel Margin="8,0,8,8">
                <TextBox Text="{Binding PropertyCompany.PropertyName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Foreground="{StaticResource MainForeground}"
                         FontSize="36"
                         BorderThickness="0"
                         Background="{StaticResource Clear}" />
                <TextBox Text="{Binding PropertyCompany.PropertyDescription, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Foreground="{StaticResource MainForeground}"
                         BorderThickness="0"
                         TextWrapping="Wrap"
                         Margin="2,0,0,0"
                         Background="{StaticResource Clear}" />
            </StackPanel>
        </StackPanel>
        <StackPanel Margin="4,0,4,4">
            <StackPanel Margin="8">
                <TextBlock Text="{Binding Source={StaticResource MainViewModel}, Path=Consts.CompanyDomain}"
                           FontSize="20"
                           Foreground="{StaticResource MainForeground}" />
                <StackPanel Orientation="Horizontal"
                            Margin="0,8,0,0">
                    <TextBlock Text="{Binding Source={StaticResource MainViewModel}, Path=Consts.CompanyDomainName}" 
                               Foreground="{StaticResource MainForeground}"/>
                    <TextBox Text="{Binding PropertyCompany.PropertyDomainName}" 
                             Background="{StaticResource Clear}"
                             Foreground="{StaticResource MainForeground}"
                             BorderThickness="0"/>
                </StackPanel>
                <StackPanel Margin="0,8,0,0">
                    <TextBlock Text="{Binding Source={StaticResource MainViewModel}, Path=Consts.StructureDevices}" 
                               FontSize="20"
                               Foreground="{StaticResource MainForeground}"/>
                    <StackPanel Orientation="Horizontal">
                        <StackPanel>
                            <Grid Width="32"
                                  Height="32">
                                <Grid Background="Aquamarine"
                                      Width="16"
                                      Height="16" />
                            </Grid>
                            <TextBlock Text="0/0"
                                       HorizontalAlignment="Center"
                                       Foreground="{StaticResource MainForeground}" />
                        </StackPanel>
                        <StackPanel>
                            <Grid Width="32"
                                  Height="32">
                                <Grid Background="Aquamarine"
                                      Width="16"
                                      Height="16" />
                            </Grid>
                            <TextBlock Text="0/0"
                                       HorizontalAlignment="Center"
                                       Foreground="{StaticResource MainForeground}" />
                        </StackPanel>
                        <StackPanel>
                            <Grid Width="32"
                                  Height="32">
                                <Grid Background="Aquamarine"
                                      Width="16"
                                      Height="16" />
                            </Grid>
                            <TextBlock Text="0/0"
                                       HorizontalAlignment="Center"
                                       Foreground="{StaticResource MainForeground}" />
                        </StackPanel>
                        <StackPanel>
                            <Grid Width="32"
                                  Height="32">
                                <Grid Background="Aquamarine"
                                      Width="16"
                                      Height="16" />
                            </Grid>
                            <TextBlock Text="0/0"
                                       HorizontalAlignment="Center"
                                       Foreground="{StaticResource MainForeground}" />
                        </StackPanel>
                        <StackPanel>
                            <Grid Width="32"
                                  Height="32">
                                <Grid Background="Aquamarine"
                                      Width="16"
                                      Height="16" />
                            </Grid>
                            <TextBlock Text="0/0"
                                       HorizontalAlignment="Center"
                                       Foreground="{StaticResource MainForeground}" />
                        </StackPanel>
                        <StackPanel>
                            <Grid Width="32"
                                  Height="32">
                                <Grid Background="Aquamarine"
                                      Width="16"
                                      Height="16" />
                            </Grid>
                            <TextBlock Text="0/0"
                                       HorizontalAlignment="Center"
                                       Foreground="{StaticResource MainForeground}" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </StackPanel>
        <StackPanel Margin="4,0,4,4">
            <StackPanel Margin="8">
                <TextBlock Text="{Binding Source={StaticResource MainViewModel}, Path=Consts.StructureStuff}"
                           FontSize="20"
                           Foreground="{StaticResource MainForeground}" />
                <StackPanel>

                </StackPanel>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Window>
