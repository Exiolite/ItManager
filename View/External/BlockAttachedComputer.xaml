<UserControl DataContext="{StaticResource UserViewModel}"
             x:Class="View.External.BlockAttachedComputer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:View.External"
             mc:Ignorable="d">
    <StackPanel Style="{StaticResource SPMargin}">
        <DockPanel>
            <TextBlock Text="Attached Computer"
                       Style="{StaticResource TH2}"
                       Foreground="{StaticResource MainColor}"
                       DockPanel.Dock="Left">
            </TextBlock>
            <ComboBox ItemsSource="{Binding PropUserCollectionViewModel.PropCompanyViewModel.PropComputerCollectionViewModel.PropComputerViewModelCollection}"
                      SelectedItem="{Binding PropComputerViewModel}"
                      BorderThickness="0"
                      MaxDropDownHeight="400"
                      DockPanel.Dock="Right">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding PropComputer.PropName}"
                                   Style="{StaticResource TH4}"
                                   VerticalAlignment="Bottom" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </DockPanel>
    </StackPanel>
</UserControl>
