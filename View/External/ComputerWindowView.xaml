<Window DataContext="{StaticResource ComputerViewModel}"
        x:Class="View.External.ComputerWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View.External"
        mc:Ignorable="d"
        Title="{Binding PropertyComputer.Name}"
        Width="400"
        ResizeMode="NoResize">
    <StackPanel>
        <StackPanel Style="{StaticResource SPMarginBlock}">
            <StackPanel Style="{StaticResource SPMargin}">
                <TextBox Text="{Binding PropertyComputer.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource TBH1}" />
                <TextBox Text="{Binding PropertyComputer.Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource TBA}"
                         TextWrapping="Wrap" />
                <ComboBox ItemsSource="{Binding PropComputerUsageTypeCollection}"
                          SelectedItem="{Binding PropertyComputer.PropUsageType}" />
            </StackPanel>
        </StackPanel>
        <local:BlockRemoteView DataContext="{Binding PropRemoteViewModel}" />
        <local:ServiceTaskListView DataContext="{Binding PropertyServiceTaskTableViewModel}" />
    </StackPanel>
</Window>
