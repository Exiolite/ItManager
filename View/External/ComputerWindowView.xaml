<Window DataContext="{StaticResource ComputerViewModel}"
        x:Class="View.External.ComputerWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View.External"
        mc:Ignorable="d"
        Title="{Binding PropertyComputer.Name}"
        Width="400"
        ResizeMode="NoResize">
    <StackPanel>
        <StackPanel>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Left">
                <Button Content="AnyDesk"
                        Style="{StaticResource BA}"
                        Command="{Binding PropertyAnyDeskViewModel.ConnectViaAnyDeskCommand}"
                        MouseRightButtonDown="Button_AnyDeskEdit"
                        Background="#ff0000"
                        Foreground="{StaticResource MainBackground}"
                        FontWeight="Medium"
                        Padding="4"/>
                <Button Content="TeamViewer"
                        Style="{StaticResource BA}"
                        Background="#4a89c2"
                        Foreground="{StaticResource MainBackground}"
                        FontWeight="Medium"
                        Padding="4" />
            </StackPanel>
        </StackPanel>        
    <StackPanel Style="{StaticResource Margin}">
        <!--#region ComputerDescription -->
        <StackPanel>
            <TextBox Text="{Binding PropertyComputer.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource TBH1}" />
            <TextBox Text="{Binding PropertyComputer.Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource TBA}"
                     TextWrapping="Wrap" />
        </StackPanel>
        <!--#endregion-->
        <local:ServiceTaskListView DataContext="{Binding PropertyServiceTaskTableViewModel}" />
    </StackPanel>
    </StackPanel>
</Window>
