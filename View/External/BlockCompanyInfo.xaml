<UserControl DataContext="{StaticResource CompanyViewModel}"
             x:Class="View.External.BlockCompanyInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:View.External"
             mc:Ignorable="d">
    <StackPanel Style="{StaticResource SPMarginBlock}">
        <StackPanel Style="{StaticResource SPMargin}">
            <TextBox Text="{Binding PropCompany.PropName}"
                     Style="{StaticResource TBH1}" />
            <TextBox Text="{Binding PropCompany.PropDescription}"
                     Style="{StaticResource TBA}"
                     TextWrapping="Wrap" />
        </StackPanel>
    </StackPanel>
</UserControl>