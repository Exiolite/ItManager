<UserControl DataContext="{StaticResource CompanyCollectionViewModel}"
             x:Class="View.External.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:View.External"
             mc:Ignorable="d">
    <StackPanel Orientation="Horizontal"
                Margin="32">
        <StackPanel>
            <TextBlock Text="Companies" />
            <ScrollViewer>
                <ListView ItemsSource="{Binding PropCompanyViewModelCollection}"
                          SelectedItem="{Binding PropCompanyViewModel}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <DockPanel>
                                <TextBlock Text="{Binding PropCompany.PropName}"
                                           DockPanel.Dock="Top"
                                           Margin="4" />
                                <StackPanel Orientation="Horizontal">
                                    <Button Width="32"
                                            Height="32"
                                            Margin="4" />
                                    <Button Width="32"
                                            Height="32"
                                            Margin="4" />
                                    <Button Width="32"
                                            Height="32"
                                            Margin="4" />
                                    <Button Width="32"
                                            Height="32"
                                            Margin="4" />
                                    <Button Width="32"
                                            Height="32"
                                            Margin="4" />
                                </StackPanel>
                            </DockPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ScrollViewer>
        </StackPanel>
        <StackPanel Margin="32,0,32,0">
            <TextBlock Text="Log" />
            <ListView ItemsSource="{Binding PropCompanyViewModelCollection}"
                      SelectedItem="{Binding PropCompanyViewModel}">
            </ListView>
        </StackPanel>
    </StackPanel>
</UserControl>
