<UserControl DataContext="{Binding Source={StaticResource CompanyTableViewModel}}"
             x:Class="View.External.LayoutCompanyStructureView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:View.External"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Text="Companies"
                   Grid.Column="0"
                   Grid.Row="0"
                   Style="{StaticResource TH1}"
                   ContextMenuService.Placement="Bottom">
            <TextBlock.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Add"
                              Command="{Binding CMDAdd}" />
                </ContextMenu>
            </TextBlock.ContextMenu>
        </TextBlock>
        <ListBox Grid.Column="0"
                 Grid.Row="1"
                 ItemsSource="{Binding PropCompanyViewModelCollection}"
                 SelectedItem="{Binding PropCompanyViewModel}"
                 MouseDoubleClick="ClickOpenCompanyInNewWindow"
                 DockPanel.Dock="Left"
                 BorderThickness="0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding PropCompany.PropName}" 
                               Style="{StaticResource TH3}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
        <TextBlock Text="Computers"
                   Grid.Column="1"
                   Grid.Row="0"
                   Style="{StaticResource TH1}"
                   ContextMenuService.Placement="Bottom">
            <TextBlock.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Add"
                              Command="{Binding PropCompanyViewModel.PropComputerTableViewModel.CMDAddServer}" />
                </ContextMenu>
            </TextBlock.ContextMenu>
        </TextBlock>
        <ListBox Grid.Column="1"
                 Grid.Row="1"
                 ItemsSource="{Binding PropCompanyViewModel.PropComputerTableViewModel.PropComputerViewModelCollection}"
                 MouseDoubleClick="ListBox_MouseDoubleClick"
                 BorderThickness="0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding PropComputer.PropName}"
                               Style="{StaticResource TH3}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
        <TextBlock Text="Servers"
                   Grid.Column="2"
                   Grid.Row="0"
                   Style="{StaticResource TH1}"
                   ContextMenuService.Placement="Bottom">
            <TextBlock.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Add"
                              Command="{Binding PropCompanyViewModel.PropComputerTableViewModel.CMDAddComputer}" />
                </ContextMenu>
            </TextBlock.ContextMenu>
        </TextBlock>
        <ListBox Grid.Column="2"
                 Grid.Row="1"
                 ItemsSource="{Binding PropCompanyViewModel.PropComputerTableViewModel.PropServerViewModelCollection}"
                 MouseDoubleClick="ListBox_MouseDoubleClick"
                 BorderThickness="0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding PropComputer.PropName}"
                               Style="{StaticResource TH3}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <TextBlock Text="Users"
                   Grid.Column="3"
                   Grid.Row="0"
                   Style="{StaticResource TH1}"
                   ContextMenuService.Placement="Bottom">
            <TextBlock.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Add"
                              Command="{Binding PropCompanyViewModel.PropUserTableViewModel.CMDAdd}" />
                </ContextMenu>
            </TextBlock.ContextMenu>
        </TextBlock>
        <ListBox Grid.Column="3"
                 Grid.Row="1"
                 ItemsSource="{Binding PropCompanyViewModel.PropUserTableViewModel.PropUserViewModelCollection}"
                 MouseDoubleClick="ClickOpenUserInNewWindow"
                 BorderThickness="0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding PropUser.PropFirstName}"
                                   Style="{StaticResource TH3}" />
                        <TextBlock Text="{Binding PropUser.PropSureName}"
                                   Style="{StaticResource TH3}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <TextBlock Text="AD Users"
                   Grid.Column="4"
                   Grid.Row="0"
                   Style="{StaticResource TH1}"
                   ContextMenuService.Placement="Bottom">
            <TextBlock.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Add"
                              Command="{Binding PropCompanyViewModel.PropADUserCollectionViewModel.CMDAdd}" />
                </ContextMenu>
            </TextBlock.ContextMenu>
        </TextBlock>
        <ListBox Grid.Column="4"
                 Grid.Row="1"
                 ItemsSource="{Binding PropCompanyViewModel.PropADUserCollectionViewModel.PropADUserViewModelCollection}"
                 MouseDoubleClick="ClickOpenADUserInNewWindow"
                 BorderThickness="0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding PropADUser.PropUserName}"
                               Style="{StaticResource TH3}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <TextBlock Text="Requests"
                   Grid.Column="5"
                   Grid.Row="0"
                   Style="{StaticResource TH1}"
                   ContextMenuService.Placement="Bottom">
            <TextBlock.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Add"
                              Command="{Binding PropCompanyViewModel.PropServiceRequestTableViewModel.CMDAdd}" />
                </ContextMenu>
            </TextBlock.ContextMenu>
        </TextBlock>
        <ListBox Grid.Column="5"
                 Grid.Row="1"
                 ItemsSource="{Binding PropCompanyViewModel.PropServiceRequestTableViewModel.PropServiceRequestViewModelCollection}"
                 MouseDoubleClick="ClickOpenServiceRequestInNewWindow"
                 BorderThickness="0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding PropServiceRequest.PropName}"
                               Style="{StaticResource TH3}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
