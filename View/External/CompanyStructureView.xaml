<UserControl DataContext="{Binding Source={StaticResource CompanyTableViewModel}}"
             x:Class="View.External.CompanyStructureView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d">
    <DockPanel>
        <!--#region ElementName -->
        <TextBlock Text="Companies"
                   FontSize="36"
                   FontFamily="SegoeUi"
                   Foreground="{StaticResource F}"
                   DockPanel.Dock="Top">
            <TextBlock.ContextMenu>
                <ContextMenu BorderThickness="0"
                             Background="{StaticResource B}"
                             Foreground="{StaticResource F}"
                             Placement="Right">
                    <MenuItem Header="Add Company"
                              Command="{Binding CommandAddNew}" />
                </ContextMenu>
            </TextBlock.ContextMenu>
        </TextBlock>
        <!--#endregion-->
        <!--#region Element -->
        <TreeView Name="CompanyTableView"
                  ItemsSource="{Binding PropertyCompanyViewModels}"
                  Background="{StaticResource Clear}"
                  BorderThickness="0">
            <TreeView.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}"
                                 Color="Transparent" />
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}"
                                 Color="Black" />
                <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}"
                                 Color="Transparent" />
                <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}"
                                 Color="Black" />
            </TreeView.Resources>

            <TreeView.ItemTemplate>
                <DataTemplate>
                    <TreeViewItem Header="{Binding PropertyCompany.Name}"
                                  FontSize="28"
                                  Foreground="{StaticResource F}">
                        <TreeViewItem Header="Devices"
                                      FontSize="24"
                                      Foreground="{StaticResource F}">
                            <!--#region ComputersView -->
                            <TreeViewItem FontSize="20"
                                          Foreground="{StaticResource F}"
                                          ItemsSource="{Binding PropertyComputerTableViewModel.PropertyComputerViewModels}">
                                <TreeViewItem.Header>
                                    <TextBlock Text="Computers"
                                               ContextMenuService.Placement="Right">
                                        <TextBlock.ContextMenu>
                                            <ContextMenu BorderThickness="0"
                                                         Background="{StaticResource B}"
                                                         Foreground="{StaticResource F}"
                                                         Placement="Right">
                                                <MenuItem Header="Add Computer"
                                                          Command="{Binding PropertyComputerTableViewModel.CommandAddNew}" />
                                            </ContextMenu>
                                        </TextBlock.ContextMenu>
                                    </TextBlock>
                                </TreeViewItem.Header>
                                <TreeViewItem.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding PropertyComputer.Name}"
                                                Click="OpenComputerInNewWindow"
                                                FontSize="16"
                                                Margin="4"
                                                Background="{StaticResource Clear}"
                                                Foreground="{StaticResource F}"
                                                BorderThickness="0">
                                            <Button.Style>
                                                <Style TargetType="Button"
                                                       BasedOn="{StaticResource {x:Type Button}}">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver"
                                                                 Value="True">
                                                            <Setter Property="Background"
                                                                    Value="{StaticResource B}" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </DataTemplate>
                                </TreeViewItem.ItemTemplate>
                            </TreeViewItem>
                            <!--#endregion-->
                            <!--#region ServersView -->
                            <TreeViewItem FontSize="20"
                                          Foreground="{StaticResource F}"
                                          ItemsSource="{Binding PropertyServerTableViewModel.PropertyServerTable}">
                                <TreeViewItem.Header>
                                <TextBlock Text="Servers"
                                           ContextMenuService.Placement="Right">
                                    <TextBlock.ContextMenu>
                                        <ContextMenu BorderThickness="0"
                                                     Background="{StaticResource B}"
                                                     Foreground="{StaticResource F}">
                                            <MenuItem Header="Add Server"
                                                      Command="{Binding PropertyServerTableViewModel.CommandAddNew}" />
                                        </ContextMenu>
                                    </TextBlock.ContextMenu>
                                </TextBlock>
                                </TreeViewItem.Header>

                                <TreeViewItem.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding PropertyServer.Name}"
                                                FontSize="16"
                                                Margin="4"
                                                Background="{StaticResource Clear}"
                                                Foreground="{StaticResource F}"
                                                BorderThickness="0"
                                                >
                                        </Button>
                                    </DataTemplate>
                                </TreeViewItem.ItemTemplate>
                            </TreeViewItem>
                            <!--#endregion-->
                        </TreeViewItem>
                    </TreeViewItem>
                </DataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
        <!--#endregion-->
    </DockPanel>
</UserControl>
