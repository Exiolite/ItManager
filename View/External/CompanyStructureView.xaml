<UserControl DataContext="{Binding Source={StaticResource CompanyTableViewModel}}"
    x:Class="View.External.CompanyStructureView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d">
    <DockPanel>
        <TextBlock Text="Companies"
                   FontSize="36"
                   FontFamily="SegoeUi"
                   Foreground="{StaticResource fff}"
                   DockPanel.Dock="Top">
            <TextBlock.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Add Company" 
                              Command="{Binding CommandAddNew}"/>
                </ContextMenu>
            </TextBlock.ContextMenu>
        </TextBlock>
        <TreeView Name="CompanyTableView"
                  ItemsSource="{Binding Property}"
                  Background="{StaticResource Clear}"
                  BorderThickness="0">
            <TreeView.ItemTemplate>
                <DataTemplate>
                    <TreeViewItem Header="{Binding Property.Name}"
                                  Foreground="{StaticResource ff}">
                        <TreeViewItem Header="Devices"
                                      Foreground="{StaticResource ff}">
                            <TreeViewItem Header="Computers"
                                          Foreground="{StaticResource ff}"
                                          ItemsSource="{Binding PropertyComputersTableViewModel.Property}">
                                <TreeViewItem.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Add Computer"
                                                  Foreground="{StaticResource ff}"
                                                  Command="{Binding PropertyComputersTableViewModel.CommandAddNew}" />
                                    </ContextMenu>
                                </TreeViewItem.ContextMenu>
                                <TreeViewItem.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding Property.Name}"
                                                Foreground="{StaticResource ff}" />
                                    </DataTemplate>
                                </TreeViewItem.ItemTemplate>
                            </TreeViewItem>
                        </TreeViewItem>
                        <TreeViewItem Header="Stuff"
                                      Foreground="{StaticResource ff}">

                        </TreeViewItem>
                    </TreeViewItem>
                </DataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
    </DockPanel>
</UserControl>
