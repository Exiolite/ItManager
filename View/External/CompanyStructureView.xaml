<UserControl DataContext="{Binding Source={StaticResource CompanyTableViewModel}}"
             x:Class="View.External.CompanyStructureView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d">
    <DockPanel Background="{StaticResource MainBackground}">
        <!--#region ElementName -->
        <TextBlock Text="{Binding Source={StaticResource MainViewModel}, Path=Consts.StructureCompanies}"
                   FontSize="20"
                   Foreground="{StaticResource MainForeground}"
                   DockPanel.Dock="Top">
            <TextBlock.ContextMenu>
                <ContextMenu BorderThickness="0"
                             Background="{StaticResource MainBackground}"
                             Foreground="{StaticResource MainForeground}"
                             Placement="Right">
                    <MenuItem Header="{Binding Source={StaticResource MainViewModel}, Path=Consts.ContextMenuAddCompany}"
                              Command="{Binding CommandAddNew}" />
                </ContextMenu>
            </TextBlock.ContextMenu>
        </TextBlock>
        <!--#endregion-->
        <!--#region Element -->
        <TreeView Name="CompanyTableView"
                  ItemsSource="{Binding PropertyCompanyViewModels}"
                  Background="{StaticResource Clear}"
                  BorderThickness="0">
            <TreeView.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}"
                                 Color="Transparent" />
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}"
                                 Color="Black" />
                <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}"
                                 Color="Transparent" />
                <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}"
                                 Color="Black" />
            </TreeView.Resources>

            <TreeView.ItemTemplate>
                <DataTemplate>
                    <TreeViewItem Header="{Binding PropertyCompany.PropertyName}"
                                  FontSize="28"
                                  Foreground="{StaticResource MainForeground}">
                        <TreeViewItem.ContextMenu>
                            <ContextMenu BorderThickness="0"
                                         Background="{StaticResource MainBackground}"
                                         Foreground="{StaticResource MainForeground}"
                                         Placement="Right">
                                <MenuItem Header="{Binding Source={StaticResource MainViewModel}, Path=Consts.ContextMenuOpenAsNewWindow}"
                                          Click="ClickOpenCompanyInNewWindow" />
                            </ContextMenu>
                        </TreeViewItem.ContextMenu>
                        <TreeViewItem Header="{Binding Source={StaticResource MainViewModel}, Path=Consts.StructureDevices}"
                                      FontSize="24"
                                      Foreground="{StaticResource MainForeground}">

                            <!--#region Content -->

                            <!--#region ComputersView -->
                            <TreeViewItem FontSize="20"
                                          Foreground="{StaticResource MainForeground}"
                                          ItemsSource="{Binding PropertyComputerTableViewModel.PropertyComputerViewModels}">
                                <TreeViewItem.Header>
                                    <TextBlock Text="{Binding Source={StaticResource MainViewModel}, Path=Consts.StructureDevicesComputers}"
                                               ContextMenuService.Placement="Right">
                                        <TextBlock.ContextMenu>
                                            <ContextMenu BorderThickness="0"
                                                         Background="{StaticResource MainBackground}"
                                                         Foreground="{StaticResource MainForeground}"
                                                         Placement="Right">
                                                <MenuItem Header="{Binding Source={StaticResource MainViewModel}, Path=Consts.ContextMenuAddComputer}"
                                                          Command="{Binding PropertyComputerTableViewModel.CommandAddNew}" />
                                            </ContextMenu>
                                        </TextBlock.ContextMenu>
                                    </TextBlock>
                                </TreeViewItem.Header>
                                <TreeViewItem.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding PropertyComputer.Name}"
                                                MouseDoubleClick="ClickOpenComputerInNewWindow"
                                                FontSize="16"
                                                Margin="4"
                                                Background="{StaticResource Clear}"
                                                Foreground="{StaticResource MainForeground}"
                                                BorderThickness="0">
                                        </Button>
                                    </DataTemplate>
                                </TreeViewItem.ItemTemplate>
                            </TreeViewItem>
                            <!--#endregion-->
                            <!--#region ServersView -->
                            <TreeViewItem FontSize="20"
                                          Foreground="{StaticResource MainForeground}"
                                          ItemsSource="{Binding PropertyServerTableViewModel.PropertyServerTable}">
                                <TreeViewItem.Header>
                                    <TextBlock Text="{Binding Source={StaticResource MainViewModel}, Path=Consts.StructureDevicesServers}"
                                               ContextMenuService.Placement="Right">
                                        <TextBlock.ContextMenu>
                                            <ContextMenu BorderThickness="0"
                                                         Background="{StaticResource MainBackground}"
                                                         Foreground="{StaticResource MainForeground}">
                                                <MenuItem Header="{Binding Source={StaticResource MainViewModel}, Path=Consts.ContextMenuAddServer}"
                                                          Command="{Binding PropertyServerTableViewModel.CommandAddNew}" />
                                            </ContextMenu>
                                        </TextBlock.ContextMenu>
                                    </TextBlock>
                                </TreeViewItem.Header>

                                <TreeViewItem.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding PropertyServer.Name}"
                                                FontSize="16"
                                                Margin="4"
                                                Background="{StaticResource Clear}"
                                                Foreground="{StaticResource MainForeground}"
                                                BorderThickness="0"
                                                MouseDoubleClick="ClickOpenServerInNewWindow">
                                        </Button>
                                    </DataTemplate>
                                </TreeViewItem.ItemTemplate>
                            </TreeViewItem>
                            <!--#endregion-->

                            <!--#endregion-->
                        </TreeViewItem>
                    </TreeViewItem>
                </DataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
        <!--#endregion-->
    </DockPanel>
</UserControl>
