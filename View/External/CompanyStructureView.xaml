<UserControl DataContext="{Binding Source={StaticResource CompanyTableViewModel}}"
             x:Class="View.External.CompanyStructureView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d">
    <DockPanel Background="{StaticResource MainBackground}">
        <!--#region ElementName -->
        <TextBlock Text="{Binding Source={StaticResource MainViewModel}, Path=Consts.StructureCompanies}"
                   FontSize="20"
                   Foreground="{StaticResource MainForeground}"
                   DockPanel.Dock="Top">
            <TextBlock.ContextMenu>
                <ContextMenu BorderThickness="0"
                             Background="{StaticResource MainBackground}"
                             Foreground="{StaticResource MainForeground}"
                             Placement="Right">
                    <MenuItem Header="{Binding Source={StaticResource MainViewModel}, Path=Consts.ContextMenuAdd}"
                              Command="{Binding CommandAddNew}" />
                </ContextMenu>
            </TextBlock.ContextMenu>
        </TextBlock>
        <!--#endregion-->
        <!--#region Element -->
        <TreeView Name="CompanyTableView"
                  ItemsSource="{Binding PropertyCompanyViewModels}"
                  Background="{StaticResource Clear}"
                  BorderThickness="0">
            <TreeView.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}"
                                 Color="Transparent" />
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}"
                                 Color="Black" />
                <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}"
                                 Color="Transparent" />
                <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}"
                                 Color="Black" />
            </TreeView.Resources>

            <TreeView.ItemTemplate>
                <DataTemplate>
                    <TreeViewItem FontSize="28"
                                  Foreground="{StaticResource MainForeground}">
                        <TreeViewItem.Header>
                            <TextBlock Text="{Binding PropertyCompany.PropertyName}">
                                <TextBlock.ContextMenu>
                                    <ContextMenu BorderThickness="0"
                                                 Background="{StaticResource MainBackground}"
                                                 Foreground="{StaticResource MainForeground}"
                                                 Placement="Right">
                                        <MenuItem Header="{Binding Source={StaticResource MainViewModel}, Path=Consts.ContextMenuOpenAsNewWindow}"
                                                  Click="ClickOpenCompanyInNewWindow" />
                                    </ContextMenu>
                                </TextBlock.ContextMenu>
                            </TextBlock>
                        </TreeViewItem.Header>
                        <TreeViewItem Header="{Binding Source={StaticResource MainViewModel}, Path=Consts.StructureDevices}"
                                      FontSize="24"
                                      Foreground="{StaticResource MainForeground}">
                            <!--#region ComputersView -->
                            <TreeViewItem FontSize="20"
                                          Foreground="{StaticResource MainForeground}"
                                          ItemsSource="{Binding PropertyComputerTableViewModel.PropertyComputerViewModels}">
                                <TreeViewItem.Header>
                                    <TextBlock Text="{Binding Source={StaticResource MainViewModel}, Path=Consts.StructureDevicesComputers}"
                                               ContextMenuService.Placement="Right">
                                        <TextBlock.ContextMenu>
                                            <ContextMenu BorderThickness="0"
                                                         Background="{StaticResource MainBackground}"
                                                         Foreground="{StaticResource MainForeground}"
                                                         Placement="Right">
                                                <MenuItem Header="{Binding Source={StaticResource MainViewModel}, Path=Consts.ContextMenuAdd}"
                                                          Command="{Binding PropertyComputerTableViewModel.CommandAddNew}" />
                                            </ContextMenu>
                                        </TextBlock.ContextMenu>
                                    </TextBlock>
                                </TreeViewItem.Header>
                                <TreeViewItem.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding PropertyComputer.Name}"
                                                Style="{StaticResource PanelButton}"
                                                FontSize="16">
                                            <Button.ContextMenu>
                                                <ContextMenu>
                                                    <MenuItem Header="Open in new window"
                                                              Click="ClickOpenComputerInNewWindow" />
                                                </ContextMenu>
                                            </Button.ContextMenu>
                                        </Button>
                                    </DataTemplate>
                                </TreeViewItem.ItemTemplate>
                            </TreeViewItem>
                            <!--#endregion-->
                            <!--#region ServersView -->
                            <TreeViewItem FontSize="20"
                                          Foreground="{StaticResource MainForeground}"
                                          ItemsSource="{Binding PropertyServerTableViewModel.PropertyServerTable}">
                                <TreeViewItem.Header>
                                    <TextBlock Text="{Binding Source={StaticResource MainViewModel}, Path=Consts.StructureDevicesServers}"
                                               ContextMenuService.Placement="Right">
                                        <TextBlock.ContextMenu>
                                            <ContextMenu BorderThickness="0"
                                                         Background="{StaticResource MainBackground}"
                                                         Foreground="{StaticResource MainForeground}">
                                                <MenuItem Header="{Binding Source={StaticResource MainViewModel}, Path=Consts.ContextMenuAdd}"
                                                          Command="{Binding PropertyServerTableViewModel.CommandAddNew}" />
                                            </ContextMenu>
                                        </TextBlock.ContextMenu>
                                    </TextBlock>
                                </TreeViewItem.Header>
                                <TreeViewItem.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding PropertyServer.Name}"
                                                Style="{StaticResource PanelButton}"
                                                FontSize="16">
                                            <Button.ContextMenu>
                                                <ContextMenu>
                                                    <MenuItem Header="Open in new window"
                                                              Click="ClickOpenServerInNewWindow" />
                                                </ContextMenu>
                                            </Button.ContextMenu>
                                        </Button>
                                    </DataTemplate>
                                </TreeViewItem.ItemTemplate>
                            </TreeViewItem>
                            <!--#endregion-->
                        </TreeViewItem>

                        <TreeViewItem FontSize="24"
                                      Foreground="{StaticResource MainForeground}"
                                      ItemsSource="{Binding PropertyStuffTableViewModel.PropertyStaffViewModels}">
                            <TreeViewItem.Header>
                                <TextBlock Text="{Binding Source={StaticResource MainViewModel}, Path=Consts.StructureStuff}"
                                           ContextMenuService.Placement="Right">
                                    <TextBlock.ContextMenu>
                                        <ContextMenu BorderThickness="0"
                                                     Background="{StaticResource MainBackground}"
                                                     Foreground="{StaticResource MainForeground}"
                                                     Placement="Right">
                                            <MenuItem Header="{Binding Source={StaticResource MainViewModel}, Path=Consts.ContextMenuAdd}"
                                                      Command="{Binding PropertyStuffTableViewModel.CommandAddNew}" />
                                        </ContextMenu>
                                    </TextBlock.ContextMenu>
                                </TextBlock>
                            </TreeViewItem.Header>
                            <TreeViewItem.ItemTemplate>
                                <DataTemplate>
                                    <Button Style="{StaticResource PanelButton}">
                                        <Button.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="Open in new window"
                                                          Click="ClickOpenStuffInNewWindow" />
                                            </ContextMenu>
                                        </Button.ContextMenu>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding PropertyStuff.PropertyFirstName}"
                                                       FontSize="16"
                                                       Margin="0,0,4,0" />
                                            <TextBlock Text="{Binding PropertyStuff.PropertySureName}"
                                                       FontSize="16" />
                                        </StackPanel>
                                    </Button>
                                </DataTemplate>
                            </TreeViewItem.ItemTemplate>
                        </TreeViewItem>
                    </TreeViewItem>
                </DataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
        <!--#endregion-->
    </DockPanel>
</UserControl>
