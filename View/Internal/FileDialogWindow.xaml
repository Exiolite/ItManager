<Window DataContext="{StaticResource FileViewModel}"
        x:Class="View.Internal.FileDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="File Dialog"
        Height="300"
        Width="600"
        WindowStartupLocation="CenterScreen">
    <DockPanel>
        <StackPanel DockPanel.Dock="Left"
                    Margin="4"
                    Background="{StaticResource PanelBackground}">
            <StackPanel Margin="8">
                <TextBlock Text="Recent opened"
                           FontSize="20"
                           Foreground="{StaticResource PanelForeground}"/>
                <ListBox ItemsSource="{Binding FileOperation.RecentFileNames}"
                         Margin="1.8"
                         SelectedItem="{Binding FileOperation.RecentFileNames}"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Margin="8">
            <TextBlock Text="{Binding FileOperation.CurrentOpenedFileName}" />
            <TextBox Text="{Binding PropertyPassword}" />
        </StackPanel>
    </DockPanel>
</Window>
