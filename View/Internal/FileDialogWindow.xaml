<Window DataContext="{StaticResource FileViewModel}"
        x:Class="View.Internal.FileDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="File Dialog"
        Height="400"
        Width="800" 
        WindowStartupLocation="CenterScreen">
    <DockPanel>
        <StackPanel DockPanel.Dock="Left"
                    Margin="4">
            <StackPanel Margin="8">
                <TextBlock Text="Recent opened"
                           FontSize="20"
                           Foreground="{StaticResource MainForeground}" />
                <ListBox ItemsSource="{Binding FileOperation.RecentFileNames}"
                         Margin="1.8"
                         BorderThickness="0"
                         SelectionChanged="ListBox_SelectionChanged" />
            </StackPanel>
        </StackPanel>
        <DockPanel>
            <StackPanel DockPanel.Dock="Bottom"
                        Margin="0,0,4,4"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                <Button Content="{Binding Source={StaticResource MainViewModel}, Path=Consts.FileNew}"
                        Command="{Binding CmdFileNew}"
                        Style="{StaticResource PanelButton}" />
                <Button Content="{Binding Source={StaticResource MainViewModel}, Path=Consts.FileOpen}"
                        Command="{Binding CmdFileOpen}"
                        Style="{StaticResource PanelButton}" />
                <Button Content="{Binding Source={StaticResource MainViewModel}, Path=Consts.FileOpenAs}"
                        Command="{Binding CommandOpenAs}"
                        Style="{StaticResource PanelButton}" />
                <Button Content="{Binding Source={StaticResource MainViewModel}, Path=Consts.FileSave}"
                        Command="{Binding CmdFileSave}"
                        Style="{StaticResource PanelButton}" />
                <Button Content="{Binding Source={StaticResource MainViewModel}, Path=Consts.FileSaveAs}"
                        Command="{Binding CmdFileSaveAs}"
                        Style="{StaticResource PanelButton}" />
            </StackPanel>
            <StackPanel Margin="0,4,4,4">
                <StackPanel DockPanel.Dock="Top"
                            Margin="8">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="File: "
                                   FontSize="20"
                                   Foreground="{StaticResource MainForeground}" />
                        <TextBlock Text="{Binding FileOperation.CurrentOpenedFileName}"
                                   FontSize="20"
                                   VerticalAlignment="Bottom"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Password: "
                                   FontSize="20"
                                   Foreground="{StaticResource MainForeground}" />
                        <TextBox Text="{Binding PropertyPassword}"
                                 Background="{StaticResource Clear}"
                                 BorderThickness="0"
                                 VerticalAlignment="Bottom"
                                 FontSize="20"
                                 FontFamily="TeamViewer15" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>

        </DockPanel>
    </DockPanel>
</Window>
