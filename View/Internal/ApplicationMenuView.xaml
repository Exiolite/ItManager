<UserControl DataContext="{Binding Source={StaticResource FileViewModel}}"
             x:Class="View.Internal.ApplicationMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d">
    <StackPanel>
        <Menu Background="{StaticResource Clear}">
            <MenuItem Header="File"
                      Foreground="{StaticResource ff}">
                <MenuItem Header="New"
                          Foreground="{StaticResource Clear}"
                          Command="{Binding CmdFileNew}" />
                <MenuItem Header="Open"
                          Command="{Binding CmdFileOpen}" />
                <MenuItem Header="Save"
                          Command="{Binding CmdFileSave}" />
                <MenuItem Header="Save As"
                          Command="{Binding CmdFileSaveAs}" />
            </MenuItem>
        </Menu>
    </StackPanel>
</UserControl>
