<UserControl DataContext="{Binding Source={StaticResource FileViewModel}}"
             x:Class="View.Internal.ApplicationMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d">
    <Menu Foreground="{StaticResource F}"
          Background="{StaticResource B}">
        <MenuItem Header="File">
            <MenuItem Header="New"
                      Command="{Binding CmdFileNew}" />
            <MenuItem Header="Open"
                      Command="{Binding CmdFileOpen}" />
            <MenuItem Header="Save"
                      Command="{Binding CmdFileSave}" />
            <MenuItem Header="Save As"
                      Command="{Binding CmdFileSaveAs}" />
        </MenuItem>
    </Menu>
</UserControl>
