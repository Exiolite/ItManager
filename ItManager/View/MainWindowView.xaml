<Window x:Class="ItManager.View.MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <!--#region Menu-->
        <DockPanel x:Name="Menu"
                   DockPanel.Dock="Top">
            <Menu Background="White">
                <MenuItem Header="File"
                          DataContext="{Binding Source={StaticResource MainViewModel}}">
                    <MenuItem Header="New"/>
                    <Separator/>
                    <MenuItem Header="Open"
                              Command="{Binding OpenCommand}"/>
                    <Separator/>
                    <MenuItem Header="Save"
                              Command="{Binding SaveCommand}"/>
                    <MenuItem Header="Save As"/>
                    <Separator/>
                </MenuItem>
                <MenuItem Header="New Company"
                              DataContext="{Binding Source={StaticResource MainViewModel}}"
                              Command="{Binding AddNewDomainCommand}"/>
            </Menu>
        </DockPanel>
        <!--#endregion-->
        <!--#region View-->
        <DockPanel x:Name="View"
                   DataContext="{Binding Source={StaticResource MainViewModel}}">
            <!--#region CompaniesListView-->
            <ListBox ItemsSource="{Binding DomainViewModels}"
                     SelectionChanged="OnClickCompany"
                     BorderThickness="0"
                     DockPanel.Dock="Left">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Path=Domain.Name}"
                                           FontSize="24"
                                           FontWeight="Light"
                                           Margin="5"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <!--#endregion-->
            <!--#region Editor-->
            <ScrollViewer>
                <DockPanel x:Name="EditorWindow"
                           Margin="20, 0, 0, 0">
                <StackPanel Name="CompanyView"
                                DataContext="{Binding Source={StaticResource CompanyViewModel}}">
                    <TextBox Text="{Binding Path=Domain.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 FontSize="24"
                                 Padding="7.5"
                                 BorderThickness="0"
                                 Background="Teal"
                                 Foreground="White"/>
                    <StackPanel Orientation="Horizontal"
                                    Margin="0,10,0,0">
                        <!--#region Computers-->
                        <DockPanel Width="310"
                                       Background="Teal">
                            <DockPanel HorizontalAlignment="Left"
                                            DockPanel.Dock="top"
                                            Width="300"
                                            Margin="5">
                                <TextBlock DockPanel.Dock="Left"
                                               Text="Computers"
                                               FontSize="20"
                                               Foreground="White"/>
                                <StackPanel HorizontalAlignment="Right"
                                                VerticalAlignment="Center">
                                    <Button Content="Add"
                                                Margin="2"
                                                Width="30"
                                                Command="{Binding AddNewComputerCommand}"
                                                BorderThickness="0"
                                                Background="White"/>
                                </StackPanel>
                            </DockPanel>
                            <DockPanel>
                                <ListView ItemsSource="{Binding Path=Domain.Devices.Computers}"
                                              BorderThickness="0"
                                              MouseDoubleClick="ListView_MouseDoubleClick">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Name}"
                                                           FontSize="20"/>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </DockPanel>
                        </DockPanel>
                        <!--#endregion-->
                            <!--#region Computers-->
                            <DockPanel Width="310"
                                       Background="Teal">
                                <DockPanel HorizontalAlignment="Left"
                                            DockPanel.Dock="top"
                                            Width="300"
                                            Margin="5">
                                    <TextBlock DockPanel.Dock="Left"
                                               Text="Computers"
                                               FontSize="20"
                                               Foreground="White"/>
                                    <StackPanel HorizontalAlignment="Right"
                                                VerticalAlignment="Center">
                                        <Button Content="Add"
                                                Margin="2"
                                                Width="30"
                                                Command="{Binding AddNewComputerCommand}"
                                                BorderThickness="0"
                                                Background="White"/>
                                    </StackPanel>
                                </DockPanel>
                                <DockPanel>
                                    <ListView ItemsSource="{Binding Path=Domain.Devices.Computers}"
                                              BorderThickness="0"
                                              MouseDoubleClick="ListView_MouseDoubleClick">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Name}"
                                                           FontSize="20"/>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </DockPanel>
                            </DockPanel>
                            <!--#endregion-->
                        </StackPanel>
                </StackPanel>
            </DockPanel>
            </ScrollViewer>
            <!--#endregion-->
        </DockPanel>
        <!--#endregion-->
    </DockPanel>
</Window>
