<Window x:Class="ItManager.View.MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <!--#region Menu-->
        <DockPanel x:Name="Menu"
                   DockPanel.Dock="Top">
            <Menu>
                <MenuItem Header="File"
                          DataContext="{Binding Source={StaticResource MainViewModel}}">
                    <MenuItem Header="New"/>
                    <Separator/>
                    <MenuItem Header="Open"
                              Command="{Binding OpenCommand}"/>
                    <Separator/>
                    <MenuItem Header="Save"
                              Command="{Binding SaveCommand}"/>
                    <MenuItem Header="Save As"/>
                    <Separator/>
                </MenuItem>
                <MenuItem Header="New Company"
                              DataContext="{Binding Source={StaticResource MainViewModel}}"
                              Command="{Binding AddNewCompanyCommand}"/>
            </Menu>
        </DockPanel>
        <!--#endregion-->
        <!--#region View-->
        <ScrollViewer>
            <DockPanel x:Name="View"
                   DataContext="{Binding Source={StaticResource MainViewModel}}">
                <!--#region CompaniesListView-->
                <DockPanel DockPanel.Dock="Left">
                    <ListView ItemsSource="{Binding CompaniesViewModels}"
                          SelectionChanged="OnClickCompany"
                          BorderThickness="0">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=Company.Name}"
                                       FontSize="30"
                                       FontWeight="Light"
                                       Margin="20"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </DockPanel>
                <!--#endregion-->
                <!--#region Editor-->
                <DockPanel x:Name="EditorWindow"
                       Margin="20">
                    <StackPanel Name="CompanyView"
                            DataContext="{Binding Source={StaticResource CompanyViewModel}}">
                        <TextBox Text="{Binding Path=Company.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="50"
                             BorderThickness="0"/>
                        <StackPanel Orientation="Horizontal">
                            <!--#region Computers-->
                            <DockPanel Width="300"
                                   Margin="10">
                                <StackPanel HorizontalAlignment="Left"
                                        Orientation="Horizontal"
                                        DockPanel.Dock="top">
                                    <TextBlock Text="Computers:"
                                           FontSize="20"/>
                                    <TextBlock Width="40"/>
                                    <Button Content="New Computer"
                                        Command="{Binding AddNewComputerCommand}"
                                        Background="Teal"
                                        Foreground="White"/>
                                </StackPanel>
                                <DockPanel>
                                    <ListView ItemsSource="{Binding Path=Company.Computers}"
                                              BorderThickness="0"
                                              MouseDoubleClick="ListView_MouseDoubleClick">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Name}"/>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </DockPanel>
                            </DockPanel>
                            <!--#endregion-->
                        </StackPanel>
                    </StackPanel>
                </DockPanel>
                <!--#endregion-->
            </DockPanel>
        </ScrollViewer>
        <!--#endregion-->
    </DockPanel>
</Window>
