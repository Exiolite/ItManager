<Window x:Class="ItManager.View.Windows.AdUserWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        DataContext="{Binding Source={StaticResource AdUserViewModel}}"
        Title="{Binding Path=AdUser.Username}"
        Width="380"
        ResizeMode="NoResize">
    <StackPanel Margin="10">

        <TextBox Text="{Binding Path=AdUser.Username, UpdateSourceTrigger=PropertyChanged}"
                 FontSize="32"
                 BorderThickness="0" />
        <TextBox Text="{Binding Path=AdUser.Password, UpdateSourceTrigger=PropertyChanged}"
                 FontSize="32"
                 BorderThickness="0" />
    </StackPanel>
</Window>
